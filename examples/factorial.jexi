{ $do: [
  {
    $function: $factorial, args: $n, =>: {
      $if: { $==: [ $n, 0 ] },
      then: 1,
      // note the quotes around '$*' are currently required
      // (they workaround a bug in relaxed-json)
      else: {
        '$*': [$n, { $factorial: { $-: [$n, 1]}}]
      }
    }
  },
  { $console.log: ['factorial 5 is:', { $factorial: 5 }] }
  { $console.log: ['factorial 40 is:', { $factorial: 40 }] }
]}
